<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.UserDashboardController">
  <top>
    <HBox alignment="CENTER_RIGHT" spacing="10">
      <children>
        <Label fx:id="dateLabel" />
      </children>
      <padding><Insets top="10" right="10"/></padding>
    </HBox>
  </top>
  <center>
    <TableView fx:id="foodTable">
      <columns>
        <TableColumn fx:id="nameColumn" text="Name" />
        <TableColumn fx:id="caloriesColumn" text="Calories" />
        <TableColumn fx:id="proteinColumn" text="Protein" />
        <TableColumn fx:id="fatColumn" text="Fat" />
        <TableColumn fx:id="carbsColumn" text="Carbs" />
        <TableColumn fx:id="categoryColumn" text="Category" />
      </columns>
    </TableView>
  </center>
  <bottom>
    <HBox alignment="CENTER" spacing="10">
      <children>
        <Button text="Add" onAction="#handleAdd" />
        <Button text="Edit" onAction="#handleEdit" />
        <Button text="Delete" onAction="#handleDelete" />
      </children>
      <padding><Insets top="10" bottom="10"/></padding>
    </HBox>
  </bottom>
</BorderPane>
